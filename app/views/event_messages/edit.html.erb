<%= form_for @message, :url => event_message_path(@event, @message), :method => :patch do |f| %>
	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_field :content, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.submit :class => "btn btn-primary" %>
    	<%= link_to 'Cancel', event_path(@event), :class => "btn btn-primary" %>
	</div>

<% end %>
