<h1>Events List</h1>

<%= form_tag events_path, :method => :get do %>
  <%= text_field_tag "keyword" %>
  <%= submit_tag "Search", :class => "btn btn-warning" %>
<% end %>

<table class="table">
	<% @events.each do |e| %>
		<tr>
			<td>
				<%= e.name %>
			</td>
			<td>
				<%= link_to 'Show', event_path(e), :class => "btn btn-primary" %>
				<%= link_to 'Edit', edit_event_path(e), :class => "btn btn-success" %>
				<%= link_to 'Delete', event_path(e), :method => :delete, :class => "btn btn-danger" %>
			</td>			
		</tr>
	<% end %>
</table>

<%= link_to 'New Event', new_event_path, :class => "btn btn-default" %>

<%= paginate @events %>
