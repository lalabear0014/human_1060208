<div class="container">
    <div id="shop_head">
		
	</div>
	<div id="shop_main" class="row">
		<h2><%= @event.name %></h2>
		<p>
			<% if @event.sex == true %>
				He is a boy.
			<% else %>
				She is a girl.
			<% end %>
		</p>
		<p>Email: <%= @event.email %></p>
		<p>Phone: <%= @event.phone %></p>
		<p>QQ/WeChat: <%= @event.contact %></p>
		<p>Address: <%= @event.address %></p>
		<p>Description: <%= simple_format @event.description %></p>
	</div>
	<p><%= link_to 'Back to index', events_path, :class => "btn btn-default" %></p>

	<div id="shop_foot" >
    	<div>地址：XX市XX區XX路XX巷XX號</div>
    	<div>電話：(06)2345678</div>
