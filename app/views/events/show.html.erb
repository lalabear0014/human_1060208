<div class="container">
    <div id="shop_head">
		
	</div>
	<div id="shop_main" class="row">
		<h2><%= @event.name %></h2>
		<p><b>IDnumber: </b><%= @event.idnumber %></p>
		<p><b>Station: </b><%= @event.station %></p>
		<p><b>Birthday: </b><%= @event.birthday %></p>
		<p>
			<% if @event.sex == true %>
				He is a boy.
			<% else %>
				She is a girl.
			<% end %>
		</p>
		<p><b>Education: </b><%= @event.education %></p>
		<p><b>Experience: </b><%= @event.experience %></p>
		
		<b>Contact: </b>
		<p>Phone: <%= @event.phone %></p>
		<p>QQ/WeChat: <%= @event.contact %></p>
		<p>Email: <%= @event.email %></p>
		<p>Address: <%= @event.address %></p>

		<p><b>Process: </b><%= simple_format @event.process %></p>
		<p><b>Assess: </b><%= simple_format @event.assess %></p>
		<p><b>Use: </b><%= simple_format @event.use %></p>
		<p><b>Effect: </b><%= simple_format @event.effect %></p>

		<p><b>Upload: </b><%= image_tag @event.avatar.url(:medium) %></p>
		<b>Messages: </b>
		<table class="table">
			<% @event.messages.each do |e| %>
				<tr>
					<td>
						<%= e.content %>
					</td>
					<td>
						<%= e.user.try(:short_name) %>
					</td>
					<td>				
						<%= link_to 'Edit', edit_event_message_path(@event, e), :class => "btn btn-primary" %>
						<%= link_to 'Delete', event_message_path(@event, e), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-danger" %>
					</td>
					<td>
						<% Time.zone = "Taipei" %>
						<%= e.updated_at %>
					</td>			
				</tr>
			<% end %>
		</table>

		<p>
			<%= link_to "New message", new_event_message_path(@event), :class => "btn btn-info" %>
			<%= link_to 'Back to index', events_path, :class => "btn btn-info" %>
			<%= link_to "Printable Receipt (PDF)", event_path(@event, format: "pdf"), :class => "btn btn-info" %>
		</p>
	</div>

	<div id="shop_foot" >
    	<div>地址：XX市XX區XX路XX巷XX號</div>
    	<div>電話：(06)2345678</div>
    	<div>版權所有 copyright © 2016 tad0616.net. All Rights Reserved. </div>
    </div>
